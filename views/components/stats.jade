.mdl-grid
	.mdl-cell.mdl-cell--12-col
		h4= labels.stats.title
		p= labels.stats.message
- var sLabels = labels.stats.summary;
	.mdl-cell.mdl-cell--12-col.scrollx
		table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp(data-bind="visible:isMobile")
			tbody(data-bind="foreach:refills")
				tr
					td
					td
						h5
							label= sLabels.date
							span.mdl-data-table__cell--non-numeric(data-bind="text:date")
				tr
					td
						div(data-bind="with:mileage")
							h6= sLabels.mileage.title
							p
								label= sLabels.mileage.total
								span(data-bind="number: total")= sLabels.na
							p
								label= sLabels.mileage.current
								span(data-bind="number: current")= sLabels.na
							p
								label= sLabels.mileage.perMonth
								span(data-bind="number: perMonth")= sLabels.na
							p
								label= sLabels.mileage.perQuarter
								span(data-bind="number: perQuarter")= sLabels.na
							p
								label= sLabels.mileage.perYear
								span(data-bind="number: perYear")= sLabels.na
							p
								label= sLabels.mileage.perLiter
								span(data-bind="number: perLiter")= sLabels.na
						div(data-bind="with:volume")
							h6= sLabels.volume.title
							p
								label= sLabels.volume.total
								span(data-bind="number: total")= sLabels.na
							p
								label= sLabels.volume.current
								span(data-bind="number: current")= sLabels.na
							p
								label= sLabels.volume.perMonth
								span(data-bind="number: perMonth")= sLabels.na
							p
								label= sLabels.volume.perQuarter
								span(data-bind="number: perQuarter")= sLabels.na
							p
								label= sLabels.volume.perYear
								span(data-bind="number: perYear")= sLabels.na
					td
						div(data-bind="with:consumption")
							h6= sLabels.consumption.title
							p
								label= sLabels.consumption.total
								span(data-bind="number: total")= sLabels.na
							p
								label= sLabels.consumption.current
								span(data-bind="number: current")= sLabels.na
							p
								label= sLabels.consumption.perMonth
								span(data-bind="number: perMonth")= sLabels.na
							p
								label= sLabels.consumption.perQuarter
								span(data-bind="number: perQuarter")= sLabels.na
